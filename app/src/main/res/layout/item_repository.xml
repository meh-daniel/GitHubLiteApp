<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/nameRepositoryTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:layout_marginStart="18dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="GitHubLiteApp"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/programmingLanguageTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="18dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="kotlin"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/repositoryDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginStart="18dp"
        app:layout_constraintTop_toBottomOf="@+id/nameRepositoryTxt"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="gjfsdlgijdsflghdsfhjgdsfajdlaksjfashdfkjasgfsljaaaaaaa"/>

</androidx.constraintlayout.widget.ConstraintLayout>